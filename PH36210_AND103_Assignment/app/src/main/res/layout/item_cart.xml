<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_item"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_gravity="start">
                    <ImageView
                        android:id="@+id/img_anh"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/logo2"
                        />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/ten_SP"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Shoe Like"
                        android:textColor="#034C06"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/gia_SP"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="100$"
                        android:textColor="#F40707"
                        android:textSize="20dp"
                        android:textStyle="normal" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="end"
                android:layout_gravity="center">
                    <Button
                        android:id="@+id/btn_deleteCart"
                        android:layout_width="130dp"
                        android:layout_height="35dp"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/btn_item"
                        android:text="Delete Cart"
                        android:textStyle="bold" />
                    <Button
                        android:id="@+id/btn_paymantCart"
                        android:layout_width="130dp"
                        android:layout_height="35dp"
                        android:background="@drawable/btn"
                        android:text="Payment"
                        android:textStyle="bold" />
            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

</LinearLayout>